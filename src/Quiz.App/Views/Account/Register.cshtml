@model Quiz.App.InputModels.RegisterUserInputModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<form method="post" asp-action="Register">
     <div class="mb-3">
         <label class="form-label">First Name</label>
         <input type="text" class="form-control" name="firstName" value="@Model?.FirstName">
         @Html.ValidationMessageFor(x => x.FirstName, "", new {@class="invalid-feedback"})
     </div>
   
     <div class="mb-3">
         <label class="form-label">Last Name</label>
         <input type="text" class="form-control" name="lastName" value="@Model?.LastName">
         @Html.ValidationMessageFor(x => x.LastName, "", new {@class="invalid-feedback"})
     </div>
     
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" name="password">
        @Html.ValidationMessageFor(x => x.Password, "", new {@class="invalid-feedback"})
    </div>
 
     <button type="submit" class="btn btn-primary">Submit</button>
 </form>


@if (!ViewData.ModelState.IsValid)
{
    <div>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
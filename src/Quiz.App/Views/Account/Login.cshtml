@model Quiz.App.InputModels.LoginInputModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<form class="needs-validation" method="post" asp-action="Login">
    
    <div class="mb-3">
        @Html.LabelFor(x => x.Username, new {@class = "form-label"})
        @Html.TextBoxFor(x => x.Username, new {@class = "form-control"})
        @Html.ValidationMessageFor(x => x.Username, "", new {@class = "invalid-feedback"})
    </div>
    
    <div class="mb-3">
        @Html.LabelFor(x => x.Password, new {@class = "form-label"})                   
        @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
        @Html.ValidationMessageFor(x => x.Password, "", new {@class = "invalid-feedback"})
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
@model Score

@{
    ViewBag.Title = "Score";
    Layout = "_Layout";
}

<div class="alert alert-primary" role="alert">
    Your score: @Model.Value
</div>

<div class="alert alert-secondary" role="alert">
    Time to finish: @Model.TimeToFinish seconds
</div>

@if (@Model.Passed)
{
    <div class="alert alert-success" role="alert">
        You Passed!
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        You failure.
    </div>
}

<div class="align-content-center mt-2">
    <a class="btn btn-primary" asp-controller="Quiz" asp-action="Reset">Reset game</a>
</div>        


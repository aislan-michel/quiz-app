@model Quiz.App.Models.Entities.User

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<ul class="list-group">
  <li class="list-group-item">First Name: @Model.FirstName</li>
  <li class="list-group-item">Last Name: @Model.LastName</li>
  <li class="list-group-item">UserName: @Model.UserName</li>
</ul>

<br/>

<span class="list-group-item font-weight-bold">Scores</span>
<table class="table table-bordered">
  <thead>
  <tr>
    <th scope="col">Category</th>
    <th scope="col">Questions Count</th>
    <th scope="col">Correct Questions</th>
    <th scope="col">Incorrect Questions</th>
    <th scope="col">Time to Finish</th>
    <th scope="col">Passed</th>
    <th scope="col">Actions</th>

  </tr>
  </thead>
  <tbody>
  @foreach (var score in @Model.Scores)
  {
    <tr>
      <td>@score.Category.Name</td>
      <td>@score.QuestionsCount</td>
      <td>@score.CorrectQuestionsCount</td>
      <td>@score.IncorrectQuestionsCount</td>
      <td>@score.TimeToFinish seconds</td>
      <td>@(score.Approved ? "yes" : "no")</td>
      <td>
        <a href="#" onclick="generateShareUrl('@score.Id')">
          Share on Facebook
        </a>
      </td>
    </tr> 
  }
  </tbody>
</table>

<a class="btn btn-secondary mt-3" asp-action="Index">Back to list</a>
@model User

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<ul class="list-group">
    <li class="list-group-item">First Name: @Model.FirstName</li>
    <li class="list-group-item">Last Name: @Model.LastName</li>
    <li class="list-group-item">Login: @Model.Login</li>
    <li class="list-group-item">Role: @Model.Role</li>
</ul>

<a class="btn btn-secondary mt-3" asp-action="Index">Back to list</a>